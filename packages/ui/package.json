{
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@sveltejs/kit": "^2.26.1",
        "@sveltejs/package": "^2.4.0",
        "@sveltejs/vite-plugin-svelte": "^6.1.0",
        "publint": "^0.3.12",
        "svelte": "^5.36.16",
        "svelte-check": "^4.3.0",
        "typescript": "^5.8.3",
        "vite": "^7.0.6"
    },
    "exports": {
        ".": {
            "svelte": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./button": {
            "svelte": "./dist/Button/index.js",
            "types": "./dist/Button/index.d.ts"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "src",
        "!src/**/*.test.*",
        "!src/**/*.spec.*"
    ],
    "keywords": [
        "svelte"
    ],
    "name": "@repo/ui",
    "peerDependencies": {
        "svelte": "^5.36.16"
    },
    "scripts": {
        "builds": "svelte-kit sync && svelte-package --input=src",
        "check-types": "svelte-check --tsconfig ./tsconfig.json",
        "devs": "svelte-kit sync && svelte-package --watch --input=src",
        "lint": "eslint ."
    },
    "sideEffects": [
        "**/*.css"
    ],
    "svelte": "./dist/index.js",
    "type": "module",
    "types": "./dist/index.d.ts",
    "version": "0.0.1"
}
