{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build", "^db:generate"],
            "env": ["*"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "outputs": [".svelte-kit/**", ".build/**", ".dist/**", ".vercel/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "db:deploy": {
            "cache": false,
            "env": ["POSTGRE_URL"],
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "env": ["POSTGRE_URL"],
            "persistent": true
        },
        "db:studio": {
            "cache": false,
            "env": ["POSTGRE_URL"]
        },
        "dev": {
            "cache": false,
            "dependsOn": ["^db:generate"],
            "env": ["*"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "preview": {
            "cache": false,
            "env": ["*"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "persistent": true
        },
        "start": {
            "cache": false,
            "env": ["*"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "persistent": true
        }
    },
    "ui": "tui"
}
