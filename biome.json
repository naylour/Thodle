{
    "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
    "assist": {
        "actions": {
            "recommended": true,
            "source": {
                "organizeImports": "on",
                "recommended": true,
                "useSortedKeys": "on",
                "useSortedProperties": "on"
            }
        },
        "enabled": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**/*.{js,ts,html,json}",
            "!node_modules",
            "!**/node_modules",
            "!**/components/ui",
            "!**/dist",
            "!**/dist/*",
            "!**/build",
            "!**/build/*",
            "!**/.svelte-kit"
        ]
    },
    "formatter": {
        "attributePosition": "multiline",
        "enabled": true,
        "includes": [
            "**/*.{js,ts,html,json}",
            "!node_modules",
            "!**/node_modules",
            "!**/components/ui",
            "!**/dist",
            "!**/dist/*",
            "!**/build",
            "!**/build/*",
            "!**/.svelte-kit"
        ],
        "indentStyle": "space",
        "indentWidth": 4
    },
    "html": {
        "formatter": {
            "attributePosition": "auto",
            "bracketSameLine": true,
            "enabled": true,
            "indentScriptAndStyle": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineEnding": "crlf",
            "lineWidth": 120,
            "selfCloseVoidElements": "always",
            "whitespaceSensitivity": "css"
        }
    },
    "javascript": {
        "assist": {
            "enabled": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "quoteStyle": "single"
        },
        "linter": {
            "enabled": true
        }
    },
    "linter": {
        "enabled": true,
        "includes": [
            "**/*.{js,ts,html,json}",
            "!**/node_modules",
            "!node_modules",
            "!**/components/ui",
            "!**/dist",
            "!**/dist/*",
            "!**/build",
            "!**/build/*",
            "!**/.svelte-kit"
        ],
        "rules": {
            "complexity": {
                "noUselessEmptyExport": "off",
                "recommended": true
            },
            "correctness": {
                "noUnusedFunctionParameters": "info"
            },
            "performance": {
                "noNamespaceImport": "off"
            },
            "recommended": true,
            "style": {
                "noEnum": "info",
                "recommended": true
            },
            "suspicious": {
                "noExplicitAny": "info"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": false,
        "useIgnoreFile": true
    }
}
